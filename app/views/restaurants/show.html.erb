<h1><%= @restaurant.name %></h1>
<ul>
  <li>📍 -  <%= @restaurant.address %></li>
  <li>📱 -  <%= @restaurant.phone_number %></li>
  <li>🧐 -  <%= @restaurant.category %></li>
  <p>Reviews :</p>
  <% @restaurant.reviews.each do |review| %>
  <li> <%= review.rating %> | <%= review.content %> </li>
  <% end %>
</ul>

 <%= link_to 'Add a review', new_restaurant_review_path(@restaurant) %>
<br>
<%= link_to 'Back to all restaurants', restaurants_path(@restaurant) %>
<br>
<%= link_to 'Delete restaurant', restaurant_path(@restaurant), method: :delete, data: { confirm: "Sure you wanna delete ?"} %>
